module seven_seg (
    input char[4],
    output segs[7]
) 

{
  always {
    case (char) {
      0: segs = 7b1110011; // P
      1: segs = 7b1110111; // A
      2: segs = 7b1101101; // S
      3: segs = 7b1110001; // F
      4: segs = 7b0000110; // I
      5: segs = 7b0111000; // L
      6: segs = 7b0000000; // empty
      7: segs = 7b1111100; // B
      8: segs = 7b0111111; // O
      default: segs = 7b0000000;
    }
  }
}